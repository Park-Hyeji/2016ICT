<!DOCTYPE html>
<html>
  <head>
    <title>Join 페이지</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"> 
    <script src="/socket.io/socket.io.js"></script>
	<link rel="stylesheet" href="stylesheets/style.css">
	<script src="http://code.jquery.com/jquery-1.7.1.js"></script>
	<script>
		var id = $("#id").val();
		var pwd = $("#pwd").val();
		var name = $("#name").val();
		var email = $("#email").val();
		var phone = $("#phone").val();
			
		function back(){
			history.back();
		}
		function doJoinSubmit(){
			console.log("빰!");
			if($("#id").val() == "" || $("#pwd").val() == "" || $("#pwd").val() !== $("#pwdCheck").val() || $("#name").val() == "" || $("#email").val() ==""){
				return;
			}else{
				$("#join").submit();
			}
		}
	</script>
	</head>
	<body>
		<form name="join" action="join" method="post">
			<h1>회원가입</h1>
			<p><label>아이디 : <input type="text" name="id" placeholder="아이디 입력" required></label></p>
			<p><label>비밀번호 : <input type="password" name="pwd" placeholder="비밀번호 입력" required></label></p>
			<p><label>이름 : <input type="text" name="name" placeholder="이름 입력" required></label></p>
			<p><label>E-mail : <input type="email" name="email" placeholder="이메일 입력" required></label></p>
			<p><label>전화번호 : <input type="tel" name="phone" placeholder="-빼고 숫자만 입력" required>
			</p>
			<input type="submit"value="가입" onclick="doJoinSubmit()">
			<input type="button" value="취소" onclick="back()">
		</form>
    </body>
</html>